<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<filter>
		<filter-name>profilingFilter</filter-name>
		<filter-class>org.tai.twitterchat.web.servlet.ProfilingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>profilingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Shiro filter -->
	<filter>
		<filter-name>ShiroFilter</filter-name>

		<filter-class>
			org.springframework.web.filter.DelegatingFilterProxy
		</filter-class>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>ShiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>helloServlet</servlet-name>
		<servlet-class>org.tai.twitterchat.web.servlet.HelloServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>helloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>org.tai.twitterchat.web.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logoutServlet</servlet-name>
		<servlet-class>org.tai.twitterchat.web.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>homeServlet</servlet-name>
		<servlet-class>org.tai.twitterchat.web.servlet.HomeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>homeServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-name>chatServlet</servlet-name>
		<servlet-class>org.tai.twitterchat.web.servlet.ChatServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>chatServlet</servlet-name>
		<url-pattern>/chat</url-pattern>
	</servlet-mapping>		
	<servlet>
		<servlet-name>createRoomServlet</servlet-name>
		<servlet-class>org.tai.twitterchat.web.servlet.CreateRoomServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>createRoomServlet</servlet-name>
		<url-pattern>/createRoom</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>

</web-app>

